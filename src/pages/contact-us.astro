---
import Layout from "@/layouts/Layout.astro";
import { useStoryblokGet } from "@/utils";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import backgroundImage from "@/images/contact_background.jpg";
import ContactForm from "@/components/ContactForm";
import SubscribeForm from "@/components/SubscribeForm";

const { data } = await useStoryblokGet("cdn/stories/contact-us");

const ACCESS_KEY = import.meta.env.STATIC_FORMS_ACCESS_KEY;
---

<Layout title="Contact Us">
  <StoryblokComponent blok={data.story.content} />
  <div
    class="p-16 flex w-full flex-col pb-48 text-[#FEFCF5] gap-8 bg-[#FEFCF5] bg-cover bg-no-repeat bg-blend-darken"
    style={{
      backgroundImage: `url(${backgroundImage.src})`,
      backgroundColor: "rgb(0 0 0 / 0.85);",
    }}
  >
    <h1 class="text-5xl font-bold mx-auto uppercase font-serif mb-16">
      Contact
    </h1>
    <div class="flex flex-col gap-16 sm:grid grid-cols-2 w-full">
      <ContactForm client:load ACCESS_KEY={ACCESS_KEY} />
      <div class="flex flex-col h-full justify-between ml-auto gap-8">
        <div class="flex flex-col gap-4">
          <span>
            Email address: <a
              target="_blank"
              class="underline"
              href="mailto:gurushradha@gmail.com">gurushradha@gmail.com</a
            >
          </span>
          <span>
            Facebook: <a
              target="_blank"
              class="underline"
              href="https://www.facebook.com/GuruShradha/"
              >https://www.facebook.com/GuruShradha/</a
            >
          </span>
          <span
            >Instagram: <a
              target="_blank"
              class="underline"
              href="https://www.instagram.com/gurushradha/"
              >https://www.instagram.com/gurushradha/</a
            ></span
          >
          <span
            >YouTube: <a
              target="_blank"
              class="underline"
              href="https://www.youtube.com/@GuruShradha"
              >https://www.youtube.com/@GuruShradha</a
            ></span
          >
        </div>
        <div class="flex flex-col gap-4">
          <span class="text-xl">Subscribe</span>
          <span>Sign up to receive newsletter and updates.</span>
          <SubscribeForm client:load />
          <span class="text-xs italic">
            We respect your privacy. Unsubscribe at any time.
          </span>
        </div>
      </div>
    </div>
  </div>
</Layout>
