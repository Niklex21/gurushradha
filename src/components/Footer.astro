---
import SocialLinkComponent from "./SocialLinkComponent.astro";
import SubscribeForm from "./SubscribeForm";
import { Button } from "./ui/button";
import FooterImage from "@/images/footer_background.png";

const socials = [
  {
    linkType: "facebook",
    url: "https://www.facebook.com/GuruShradha/",
  },
  {
    linkType: "instagram",
    url: "https://www.instagram.com/gurushradha/",
  },
  {
    linkType: "youtube",
    url: "https://www.youtube.com/@GuruShradha",
  },
  {
    linkType: "tiktok",
    url: "https://www.tiktok.com/@gurushradha",
  },
];
---

<div class="relative flex flex-col w-full">
  <div
    class="absolute top-0 left-0 -translate-y-12 flex w-full h-12 from-transparent to-[#896B34] bg-gradient-to-b"
  >
  </div>
  <div
    class="flex flex-col gap-8 sm:grid sm:grid-cols-4 w-full p-8 text-background mt-auto bg-no-repeat bg-cover"
    style={`background-image: url(${FooterImage.src});`}
  >
    <div class="flex flex-col gap-8 col-span-1">
      <h1 class="text-2xl">Guru Shradha</h1>
      <div class="flex flex-row gap-4 items-center">
        {
          socials.map((social) => (
            <SocialLinkComponent
              linkType={social.linkType}
              url={social.url}
              hexColor="FEFCF5"
            />
          ))
        }
      </div>
      <a href={"/support-us"} class="mr-auto">
        <Button>Donate</Button>
      </a>
      <span class="text-xs">
        Â© 2024 Guru Shradha. All rights reserved. Designed and developed by
        Alex Nikanov, Maya Devalcheruvu, Ragini Vecham, Mayura Garg, Trina
        Sarkar, and Niharika Mohanty.
      </span>
    </div>
    <div class="col-span-2 sm:items-center flex flex-col gap-8 my-auto">
      <h1 class="text-2xl font-bold">Subscribe</h1>
      <span class="text-lg">Sign up to receive newsletter and updates.</span>
      <SubscribeForm client:load />
    </div>
    <div
      class="col-span-1 flex flex-col h-full gap-2 text-lg justify-between sm:items-end"
    >
      <a
        href="/about"
        class="text-background no-underline hover:underline hover:text-background font-bold"
        >About</a
      >
      <a
        href="/events"
        class="text-background no-underline hover:underline hover:text-background font-bold"
        >Events</a
      >
      <a
        href="/classes"
        class="text-background no-underline hover:underline hover:text-background font-bold"
        >Classes</a
      >
      <a
        href="/gallery"
        class="text-background no-underline hover:underline hover:text-background font-bold"
        >Gallery</a
      >
      <a
        href="/support-us"
        class="text-background no-underline hover:underline hover:text-background font-bold"
        >Support</a
      >
      <a
        href="/contact-us"
        class="text-background no-underline hover:underline hover:text-background font-bold"
        >Contact</a
      >
    </div>
  </div>
</div>
