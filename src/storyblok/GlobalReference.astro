---
import type { GlobalReferenceStoryblok } from '@/component-types';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

const { blok } = Astro.props as { blok: GlobalReferenceStoryblok };
---

{
    blok.reference ? (
        // This is a global reference to a component
        <StoryblokComponent blok={blok.reference?.[0].content.global[0]} />
    ) : (
        <></>
    )
}
