---
import type { VisionStoryblok } from "@/component-types";

const { blok } = Astro.props as { blok: VisionStoryblok };
---

<div class="p-16 flex w-full flex-col gap-8 bg-[#FEFCF5]">
  <h1 class="text-5xl font-bold sm:mx-auto uppercase font-serif">Vision</h1>
  <h1 class="text-3xl text-[#A00A0A] font-bold mx-auto">
    "{blok.headline}"
  </h1>
  <div class="flex flex-col sm:grid sm:grid-cols-2 mt-10 gap-16">
    <div class="flex flex-col gap-6 my-auto p-2 bg-[#A00A0A]/50 rounded-xl">
      <h1 class="text-3xl font-bold font-serif">Mission</h1>
      <span class="text-xl">{blok.mission}</span>
    </div>
    <img
      src={blok.mission_image.filename}
      alt={blok.mission_image.alt}
      class="rounded-xl"
    />
  </div>
  <div class="flex flex-col sm:grid sm:grid-cols-2 mt-16 gap-16">
    <img
      src={blok.vision_image.filename}
      alt={blok.vision_image.alt}
      class="rounded-xl"
    />
    <div class="flex flex-col gap-6 my-auto p-2 bg-[#A00A0A]/50 rounded-xl">
      <h1 class="text-3xl font-bold font-serif">Vision</h1>
      <span class="text-xl">{blok.our_vision}</span>
    </div>
  </div>
</div>
