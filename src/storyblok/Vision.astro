---
import type { VisionStoryblok } from "@/component-types";

const { blok } = Astro.props as { blok: VisionStoryblok };
---

<h2 class="text-3xl text-red-main font-bold mb-8 sm:mb-0">
  "{blok.headline}"
</h2>
<div class="hidden flex-col sm:grid sm:grid-cols-2 mt-10 gap-16">
  <div class="flex flex-col gap-6 my-auto p-2 bg-red-main/50 rounded-xl">
    <h1 class="text-3xl font-bold font-serif">Mission</h1>
    <span class="text-xl">{blok.mission}</span>
  </div>
  <img
    src={blok.mission_image.filename}
    alt={blok.mission_image.alt}
    class="rounded-xl"
  />
</div>
<div class="flex sm:hidden flex-col gap-8">
  <img
    src={blok.mission_image.filename}
    alt={blok.mission_image.alt}
    class="rounded-xl"
  />
  <div class="flex flex-col gap-6 my-auto p-6 bg-red-main/50 rounded-xl">
    <h1 class="text-3xl font-bold font-serif">Mission</h1>
    <span class="text-xl">{blok.mission}</span>
  </div>
</div>
<div
  class="flex flex-col sm:grid sm:grid-cols-2 mt-8 sm:mt-16 gap-8 sm:gap-16"
>
  <img
    src={blok.vision_image.filename}
    alt={blok.vision_image.alt}
    class="rounded-xl"
  />
  <div class="flex flex-col gap-6 my-auto p-2 bg-red-main/50 rounded-xl">
    <h1 class="text-3xl font-bold font-serif">Vision</h1>
    <span class="text-xl">{blok.our_vision}</span>
  </div>
</div>
