---
import type {
  BulletPointStoryblok,
  HomeMainTextStoryblok,
} from "@/component-types";
import { Button } from "@/components/ui/button";

const { blok } = Astro.props as { blok: HomeMainTextStoryblok };
---

<div class="flex flex-row gap-8 items-center">
  <div
    class="flex flex-col gap-4 w-full p-8 bg-[#FEFCF5]/80 rounded-t-xl py-16 items-center"
  >
    <div class="flex flex-row gap-8 items-center justify-center">
      <div class="flex flex-col gap-4 justify-start text-center">
        <h1
          class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-4xl font-bold text-black max-w-prose flex font-serif"
        >
          {blok.headline}
        </h1>
        <div
          class="flex flex-col gap-8 text-base sm:text-lg md:text-xl lg:text-2xl xl:text-3xl text-black font-serif"
        >
          <span class="">{blok.call_to_action}</span>
        </div>
      </div>
    </div>
    <ul class="flex flex-col list-disc gap-y-4 mt-8 max-w-lg ml-6">
      {
        blok.bullet_points?.map((point: BulletPointStoryblok) => (
          <li>{point.text}</li>
        ))
      }
    </ul>
    <a href={"/support-us"} class="mt-8">
      <Button
        className="bg-[#A00A0A] w-96 border-[#FEFCF5] border text-[#FEFCF5] hover:bg-[#FEFCF5] hover:text-[#A00A0A] transition-all duration-200 text-xl px-4 py-2 rounded-xl"
      >
        Donate Today
      </Button>
    </a>
  </div>
</div>
